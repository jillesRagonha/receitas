<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_receita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/card_cornerRadius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true"
    tools:context="br.com.agilles.receitas.ui.fragments.ListaReceitasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receitas_nome_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/tamanho_titulo"
            tools:text="@string/nome_receita" />

        <ImageView
            android:id="@+id/receitas_imagem_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/receita_content_description"
            android:src="@drawable/food_placeholder"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margem_padrao">

            <Button
                style="@style/EstiloBotaoCards"
                android:text="@string/texto_botao_ingredientes" />

            <Button
                style="@style/EstiloBotaoCards"
                android:text="@string/texto_botao_steps" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
